<Window x:Class="Reciepe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reciepe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Border DockPanel.Dock="Top" Background="#D64045">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Background="#E9FFF9" Margin="6" Click="goToReceiptsPage" Padding="10" Width="170">Список рецептов</Button>
                <Button Background="#E9FFF9" Content="Список ингридиентов" Margin="6" Padding="10" Width="170"  Click="goToIngridientPage"/>
                
            </StackPanel>
        </Border>
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
